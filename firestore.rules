rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow reading other users for friends/leaderboard (authenticated users only)
      allow read: if request.auth != null;
    }
    
    // User subcollections (pets, runs, etc.)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Groups - members can read/write, anyone authenticated can create
    match /groups/{groupId} {
      // Allow reading groups you're a member of
      allow read: if request.auth != null && request.auth.uid in resource.data.memberIds;
      
      // Allow creating groups (creator becomes member)
      allow create: if request.auth != null && request.auth.uid in request.resource.data.memberIds;
      
      // Allow updating if you're a member
      allow update: if request.auth != null && request.auth.uid in resource.data.memberIds;
      
      // Allow delete only by owner
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
      
      // Weekly leaderboard subcollection
      match /weeklyLeaderboard/{uid} {
        // Members can read the leaderboard
        allow read: if request.auth != null;
        
        // Users can only write their own leaderboard entry
        allow write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
