rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users - any authenticated user can read any profile (for friends, leaderboards, search)
    // Only the owner can create/delete their own doc
    // Any authenticated user can update (needed for friend requests across users)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null;
    }
    
    // User subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Usernames - uniqueness registry
    match /usernames/{username} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }
    
    // Groups - members can read/write, anyone authenticated can create
    match /groups/{groupId} {
      // Allow reading groups you're a member of
      allow read: if request.auth != null && request.auth.uid in resource.data.memberIds;
      
      // Allow creating groups (creator becomes member)
      allow create: if request.auth != null && request.auth.uid in request.resource.data.memberIds;
      
      // Allow updating if you're a member
      allow update: if request.auth != null && request.auth.uid in resource.data.memberIds;
      
      // Allow delete by owner (field is ownerUid, not ownerId)
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      
      // Weekly leaderboard subcollection
      match /weeklyLeaderboard/{uid} {
        // Members can read the leaderboard
        allow read: if request.auth != null;
        
        // Users can only write their own leaderboard entry
        allow write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
